# Docker Environment Configuration
# Copy this to .env and customize for your environment

# Project Configuration
PROJECT_NAME=tumor-detection-segmentation
ENVIRONMENT=development

# Python Configuration
PYTHONPATH=/app
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all

# Database Configuration
POSTGRES_DB=tumor_detection
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Jupyter Configuration
JUPYTER_ENABLE_LAB=yes
JUPYTER_TOKEN=
JUPYTER_PASSWORD=

# MLFlow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_S3_ENDPOINT_URL=
MLFLOW_S3_IGNORE_TLS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured

# Data Paths (inside container)
DATA_PATH=/app/data
MODELS_PATH=/app/models
LOGS_PATH=/app/logs
REPORTS_PATH=/app/reports

# Testing Configuration
PYTEST_WORKERS=auto
COVERAGE_THRESHOLD=80

# Security Configuration (change in production)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Medical Imaging Configuration
MAX_IMAGE_SIZE_MB=500
SUPPORTED_FORMATS=nii,nii.gz,dcm,dicom
DEFAULT_SPACING=1.5,1.5,1.5
DEFAULT_SIZE=128,128,128

# Model Configuration
DEFAULT_MODEL=unet
DEVICE=cuda
BATCH_SIZE=4
NUM_WORKERS=4
PREFETCH_FACTOR=2

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
