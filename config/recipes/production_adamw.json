{
  "model": {
    "name": "ProductionUNETR",
    "architecture": "unetr",
    "input_size": [96, 96, 96],
    "in_channels": 4,
    "out_channels": 4,
    "feature_size": 32,
    "hidden_size": 768,
    "mlp_dim": 3072,
    "num_heads": 12,
    "pos_embed": "perceptron",
    "dropout_rate": 0.15
  },
  "training": {
    "batch_size": 2,
    "learning_rate": 0.00005,
    "weight_decay": 0.05,
    "max_epochs": 200,
    "validation_interval": 1,
    "sw_batch_size": 4,
    "overlap": 0.5,
    "cache_rate": 0.8,
    "num_workers": 6,
    "gradient_clipping": true,
    "max_grad_norm": 1.0,
    "warmup_epochs": 10,
    "save_frequency": 10,
    "early_stopping": true,
    "early_stopping_patience": 50
  },
  "augmentation": {
    "spatial_size": [96, 96, 96],
    "rand_flip_prob": 0.5,
    "rand_rotate90_prob": 0.5,
    "rand_scale_intensity_prob": 0.2,
    "rand_shift_intensity_prob": 0.2,
    "rand_gaussian_noise_prob": 0.2,
    "rand_gaussian_noise_std": 0.01,
    "rand_gaussian_smooth_prob": 0.15,
    "rand_adjust_contrast_prob": 0.2,
    "rand_elastic_deform_prob": 0.1
  },
  "optimizer": {
    "name": "AdamW",
    "lr": 0.00005,
    "betas": [0.9, 0.999],
    "eps": 1e-8,
    "weight_decay": 0.05
  },
  "scheduler": {
    "name": "ReduceLROnPlateau",
    "mode": "max",
    "factor": 0.5,
    "patience": 20,
    "threshold": 0.0001,
    "threshold_mode": "rel",
    "cooldown": 10,
    "min_lr": 1e-8,
    "verbose": true
  },
  "loss": {
    "name": "DiceCELoss",
    "to_onehot_y": true,
    "softmax": true,
    "lambda_dice": 0.5,
    "lambda_ce": 0.5
  },
  "metrics": {
    "primary": "dice",
    "compute_hausdorff": true,
    "compute_surface_distance": true,
    "compute_confusion_matrix": true
  },
  "mlflow": {
    "enabled": true,
    "experiment_name": "Production_Training",
    "run_name": "unetr_adamw_production",
    "log_frequency": 5
  },
  "checkpointing": {
    "save_best_only": false,
    "monitor": "val_dice",
    "mode": "max"
  }
}
