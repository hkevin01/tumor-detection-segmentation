{
  "model": {
    "architecture": "unetr",
    "in_channels": 4,
    "out_channels": 3,
    "img_size": [96, 96, 96],
    "feature_size": 12,
    "hidden_size": 512,
    "mlp_dim": 2048,
    "num_heads": 8,
    "dropout_rate": 0.1
  },
  "optimizer": {
    "type": "AdamW",
    "lr": 0.0003,
    "weight_decay": 0.01
  },
  "scheduler": {
    "type": "ReduceLROnPlateau",
    "mode": "max",
    "factor": 0.5,
    "patience": 3,
    "min_lr": 1e-07
  },
  "training": {
    "batch_size": 4,
    "num_epochs": 50,
    "use_amp": true,
    "num_workers": 4
  }
}
